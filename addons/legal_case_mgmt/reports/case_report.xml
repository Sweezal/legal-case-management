<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_legal_case">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="case">
                <div class="page">
                    <h2>Case Summary: <span t-field="case.name"/></h2>
                    <p><strong>Client:</strong> <span t-field="case.client_id"/></p>
                    <p><strong>Lawyer:</strong> <span t-field="case.responsible_lawyer_id"/></p>
                    <p><strong>Status:</strong> <span t-field="case.stage"/></p>
                    <p><strong>Fixed Fee:</strong> <span t-field="case.fixed_fee"/></p>
                    <p><strong>Closed Date:</strong> <span t-field="case.close_date"/></p>
                    <p><strong>Description:</strong> <span t-field="case.description"/></p>
                </div>
            </t>
        </t>
    </template>
</odoo>